<main>
  <head>
    <link rel="stylesheet" href="/public/css/login-style.css"/>
  </head>
  
  <div class="flex-container">
    <img src="../public/images/WangWang_Logo.png" alt="Wang Wang: Clinic Searcher">
    <form action="/login" method="POST" id="login-form" class="centered">
      <h1>Login</h1>

      <label for="emailAddressInput">
        Email
        <input
          type="email"
          name="emailAddressInput"
          id="emailAddressInput"
          placeholder="Enter email address"
        >
      </label>

      <label for="passwordInput">
        Password
        <input
          type="password"
          name="passwordInput"
          id="passwordInput"
          placeholder="Enter password"
        >
      </label>

      <div id="error-div" class="centered"></div>
      {{!-- <div id="errors">{{bad}}</div> --}}

      {{#if error}}
        <p id="server-errors" class="errors">{{message}}</p>
      {{/if}}

      <button type="submit" class="btn">Log In</button>
      <br>
      <a href="/register" class="light-link">Click here to register!</a>
    </form>
  </div>

  <script src="../public/js/login.js"></script>

</main>
