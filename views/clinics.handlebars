<main>
    <head>
        <link rel="stylesheet" href="/public/css/clinics-styles.css"/>
    </head>
        <br></br>
        <div class="clinics">
            {{#each clinics}}
                <div class="clinic">
                    <p>{{math @index "+" 1}}. {{this.name}}</p>
                    <div class="clinic-info">
                        <p>{{this.avgRating}} Average Rating</p>
                        <p>{{this.address}}</p>
                        <button class="appointment-button" onclick="location.href='/clinic/{{this._id}}';" style="cursor: pointer;">    BOOK APPOINTMENT     </button>
                    </div>
                    <div class="container">
                        <img src={{this.image}}>
                    </div>
                </div>
            {{/each}}
        </div>
</main>